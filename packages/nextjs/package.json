{
  "name": "@dodo/nextjs",
  "version": "0.1.0",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --sourcemap --clean --watch",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./checkout": {
      "types": "./dist/checkout/checkout.d.ts",
      "import": "./dist/checkout/checkout.js",
      "require": "./dist/checkout/checkout.cjs"
    },
    "./webhooks": {
      "types": "./dist/webhooks/webhooks.d.ts",
      "import": "./dist/webhooks/webhooks.js",
      "require": "./dist/webhooks/webhooks.cjs"
    },
    "./customer-portal": {
      "types": "./dist/customer-portal/customer-portal.d.ts",
      "import": "./dist/customer-portal/customer-portal.js",
      "require": "./dist/customer-portal/customer-portal.cjs"
    }
  },
  "dependencies": {
    "@dodo/core": "*",
    "next": "^15.3.4"
  },
  "devDependencies": {
    "@dodo/typescript-config": "*",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "zod": "^3.25.73"
  },
  "type": "module"
}
