{
  "name": "@dodopayments/nextjs",
  "version": "0.1.2",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist --clean",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@dodopayments/core": "^0.1.7"
  },
  "keywords": [
    "payments",
    "dodo",
    "nextjs",
    "webhooks",
    "checkout",
    "api",
    "typescript"
  ],
  "author": {
    "name": "Dodo Payments",
    "email": "support@dodopayments.com",
    "url": "https://dodopayments.com"
  },
  "devDependencies": {
    "@dodo/typescript-config": "*",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "next": "^15.3.4",
    "zod": "^3.25.73"
  },
  "type": "module",
  "files": [
    "dist",
    "llm-prompt.txt"
  ]
}
