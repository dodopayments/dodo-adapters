{
  "name": "@dodopayments/betterauth",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:types": "tsc",
    "build": "npm run build:types && rollup -c",
    "dev": "rollup -c -w",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-types": "tsc --noEmit"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./checkout": {
      "import": "./dist/plugins/checkout.js",
      "require": "./dist/plugins/checkout.cjs",
      "types": "./dist/plugins/checkout.d.ts"
    },
    "./portal": {
      "import": "./dist/plugins/portal.js",
      "require": "./dist/plugins/portal.cjs",
      "types": "./dist/plugins/portal.d.ts"
    },
    "./webhooks": {
      "import": "./dist/plugins/webhooks.js",
      "require": "./dist/plugins/webhooks.cjs",
      "types": "./dist/plugins/webhooks.d.ts"
    },
    "./usage": {
      "import": "./dist/plugins/usage.js",
      "require": "./dist/plugins/usage.cjs",
      "types": "./dist/plugins/usage.d.ts"
    }
  },
  "dependencies": {
    "@dodopayments/core": "*",
    "zod": "^3.25.74"
  },
  "peerDependencies": {
    "better-auth": "^1.2.7",
    "dodopayments": "^1.37.2"
  },
  "devDependencies": {
    "@dodo/typescript-config": "*",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rimraf": "^5.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "payments",
    "dodo",
    "betterauth",
    "auth",
    "authentication",
    "checkout",
    "webhooks",
    "portal",
    "typescript"
  ],
  "author": {
    "name": "Dodo Payments",
    "email": "support@dodopayments.com",
    "url": "https://dodopayments.com"
  },
  "license": "Apache-2.0"
}
