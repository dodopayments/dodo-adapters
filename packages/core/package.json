{
  "name": "@dodopayments/core",
  "version": "0.3.2",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/ --format esm,cjs --dist --clean --sourcemap",
    "dev": "npm run build -- --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./checkout": {
      "types": "./dist/checkout/checkout.d.ts",
      "import": "./dist/checkout/checkout.js",
      "require": "./dist/checkout/checkout.cjs"
    },
    "./webhook": {
      "types": "./dist/webhook/webhook.d.ts",
      "import": "./dist/webhook/webhook.js",
      "require": "./dist/webhook/webhook.cjs"
    },
    "./schemas": {
      "types": "./dist/schemas/webhook.d.ts",
      "import": "./dist/schemas/webhook.js",
      "require": "./dist/schemas/webhook.cjs"
    }
  },
  "dependencies": {
    "dodopayments": "^2.0.2",
    "standardwebhooks": "^1.0.0"
  },
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "@dodo/typescript-config": "*",
    "vitest": "^2.0.4"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "payments",
    "core",
    "webhooks",
    "checkout",
    "api",
    "typescript"
  ],
  "author": {
    "name": "Dodo Payments",
    "email": "support@dodopayments.com",
    "url": "https://dodopayments.com"
  },
  "license": "Apache-2.0"
}
