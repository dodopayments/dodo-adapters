{
  "name": "@dodopayments/core",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    "./checkout": {
      "import": "./dist/checkout/checkout.js",
      "require": "./dist/checkout/checkout.cjs",
      "types": "./dist/checkout/checkout.d.ts"
    },
    "./subscriptions": {
      "import": "./dist/subscriptions/index.js",
      "require": "./dist/subscriptions/index.cjs",
      "types": "./dist/subscriptions/index.d.ts"
    },
    "./webhook": {
      "import": "./dist/webhook/webhook.js",
      "require": "./dist/webhook/webhook.cjs",
      "types": "./dist/webhook/webhook.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/webhook.js",
      "require": "./dist/schemas/webhook.cjs",
      "types": "./dist/schemas/webhook.d.ts"
    }
  },
  "dependencies": {
    "dodopayments": "^2.0.2",
    "standardwebhooks": "^1.0.0"
  },
  "peerDependencies": {
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@dodo/typescript-config": "*",
    "vitest": "^2.0.4"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "payments",
    "core",
    "webhooks",
    "checkout",
    "api",
    "typescript"
  ],
  "author": {
    "name": "Dodo Payments",
    "email": "support@dodopayments.com",
    "url": "https://dodopayments.com"
  },
  "license": "Apache-2.0"
}
