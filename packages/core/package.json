{
  "name": "@dodo/core",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    "./webhook": {
      "types": "./dist/webhook/webhook.d.ts",
      "default": "./dist/webhook/webhook.js"
    },
    "./schemas/webhook": {
      "types": "./dist/schemas/webhook.d.ts",
      "default": "./dist/schemas/webhook.js"
    },
    "./checkout": {
      "types": "./dist/checkout/checkout.d.ts",
      "default": "./dist/checkout/checkout.js"
    }
  },
  "peerDependencies": {
    "zod": "^3.25.74"
  },
  "dependencies": {
    "dodopayments": "^1.38.0"
  },
  "devDependencies": {
    "@dodo/typescript-config": "*",
    "vitest": "^2.0.4"
  },
  "files": [
    "dist"
  ]
}
