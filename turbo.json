{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "dependsOn": ["^test"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-format": {
      "dependsOn": ["^check-format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "@dodopayments/nextjs-basic": {
      "dependsOn": ["@dodopayments/nextjs#build"]
    },
    "ci": {
      "dependsOn": ["check-format", "check-types", "build", "test"]
    }
  }
}
